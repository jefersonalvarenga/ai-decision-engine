# EasyScale Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# DSPy Configuration
# ============================================================================
DSPY_PROVIDER=openai  # Options: openai, anthropic, groq
DSPY_MODEL=gpt-4o-mini  # Or: claude-3-5-sonnet-20241022, llama-3.3-70b-versatile
DSPY_TEMPERATURE=0.3
DSPY_MAX_TOKENS=1000

# ============================================================================
# API Keys
# ============================================================================
# OpenAI (for gpt-4o-mini, gpt-4-turbo, etc.)
OPENAI_API_KEY=sk-proj-...

# Anthropic (for Claude models)
ANTHROPIC_API_KEY=sk-ant-...

# Groq (for Llama models)
GROQ_API_KEY=gsk_...

# ============================================================================
# Supabase Configuration
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SCHEMA=public

# ============================================================================
# Application Settings
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG_MODE=false
